<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="i.numan.drowsi.emergency_.EmergencyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".EmergencyNumbersActivity2">

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/blue_button"
            android:fontFamily="sans-serif-condensed"
            android:paddingStart="16dp"
            android:paddingTop="110dp"
            android:text="Emergency Contacts"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="90dp"
            android:layout_marginStart="32dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:paddingTop="12dp"
                    android:text="Police"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:paddingTop="12dp"
                    android:text="Rescue Team "
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:paddingTop="12dp"
                    android:text="Counter Terrorism"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:paddingTop="12dp"
                    android:text="Motorway Police"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:orientation="vertical">


                <Button
                    android:id="@+id/police"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/blue_button"
                    android:text="@string/_102"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/rescue"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/blue_button"
                    android:text="@string/_112"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/counter_T"
                    android:layout_width="100dp"
                    android:layout_height="50dp"

                    android:layout_margin="12dp"

                    android:background="@drawable/blue_button"
                    android:text="@string/_100"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/motorway_police"
                    android:layout_width="100dp"
                    android:layout_height="50dp"

                    android:layout_margin="12dp"
                    android:background="@drawable/blue_button"
                    android:text="@string/_181"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
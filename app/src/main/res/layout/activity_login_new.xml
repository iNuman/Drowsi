<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="i.numan.drowsi.login_.LoginNewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"

            android:text="@string/welcome"
            android:textColor="#ffffff"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_tell_us"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_welcome"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/tell_us_your_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_login_name"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="35dp"
            android:hint="@string/name"
            android:paddingStart="15dp"
            android:paddingBottom="16dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_login_number"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="35dp"
            android:hint="@string/friend_s_contact_number"
            android:inputType="phone"
            android:visibility="invisible"
            android:paddingStart="15dp"
            android:paddingBottom="16dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_friends_number_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_login_number"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_login_next"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@id/tv_friends_number_message"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/blue_button"
            android:text="@string/next"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>